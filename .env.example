# Copy this file to .env.local and fill in your API keys for MCP servers

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3039
NODE_ENV=development

# Supabase Configuration (REQUIRED)
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration (REQUIRED)
# Get from: https://dashboard.stripe.com/test/apikeys (USE TEST KEYS ONLY)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# MCP Server API Keys (Optional - leave empty to skip these MCPs)
# Get from: https://console.apify.com/account/integrations
APIFY_TOKEN=

# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Get from: https://context7.com/dashboard
CONTEXT7_API_KEY=

# Note: Supabase MCP runs locally - no access token needed